<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/custom_camnang"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <TextView
                android:layout_margin="@dimen/_2sdp"
                android:id="@+id/id_item_camnang_ten"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Những Đồ vật nên mang khi leo núi"
                android:textColor="#032cff"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toTopOf="@+id/id_item_camnang_demo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_margin="@dimen/_2sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/id_item_camnang_demo"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:text="những nên mang khi leo núi bao gồm gạch đá và súng ông"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_item_camnang_ten"
                app:layout_constraintVertical_bias="1.0" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</RelativeLayout>