<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".DiadanhActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


<ViewFlipper
    android:id="@+id/id_item_diadanh_hinhanh"
    android:layout_width="match_parent"
    android:layout_height="300dp">


</ViewFlipper>

    <TextView
        android:typeface="serif"
        android:layout_marginLeft="@dimen/_8sdp"
        android:textSize="@dimen/_16sdp"
        android:textColor="#000000"
        android:text="Phố cổ hội an"
        android:id="@+id/id_item_diadanh_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_item_diadanh_hinhanh" />

    <TextView
        android:layout_marginRight="@dimen/_5sdp"
        android:typeface="serif"
        android:layout_marginLeft="@dimen/_20sdp"
        android:id="@+id/id_item_diadanh_loai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Loại : Danh thắng"
        android:textColor="#FF3E3D3D"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_item_diadanh_ten" />

    <TextView
        android:layout_marginRight="@dimen/_5sdp"
        android:background="#efefef"
        android:typeface="serif"
        android:layout_marginLeft="@dimen/_20sdp"
        android:id="@+id/id_item_diadanh_mota"
        android:textColor="#3e3d3d"
        android:textSize="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Mô tả"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_item_diadanh_loai" />
        <TextView
            android:layout_marginRight="@dimen/_5sdp"
            android:typeface="serif"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/id_item_diadanh_giave"
            android:text="Giá vé : Miễn Phí"
            android:textSize="@dimen/_12sdp"
            android:textColor="#2d2c2c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_item_diadanh_mota"
            />
        <TextView
            android:layout_marginRight="@dimen/_5sdp"
            android:typeface="serif"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/id_item_diadanh_ngaymocua"
            android:text="Ngày mỏ của: Cả tuần"
            android:textSize="@dimen/_12sdp"
            android:textColor="#232323"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_item_diadanh_giave"
            />
        <TextView
            android:layout_marginRight="@dimen/_5sdp"
            android:typeface="serif"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/id_item_diadanh_giomocua"
            android:text="Giờ mở cửa: 6h00  - 18h00 "
            android:textSize="@dimen/_12sdp"
            android:textColor="#212121"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_item_diadanh_ngaymocua"
            />
        <TextView
            android:layout_marginLeft="@dimen/_8sdp"
            android:textColor="#ff0000"
            android:textSize="@dimen/_16sdp"
            android:text="Liên quan (đặc sản) "
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <android.support.v7.widget.RecyclerView
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:id="@+id/id_item_diadanh_Recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>