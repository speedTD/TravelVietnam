<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        style="@style/CardView.Light"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/id_item_diadanh_hinh"
            android:scaleType="centerCrop"
            android:src="@drawable/demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/id_item_diadanh_rate"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="290dp"
            android:src="@drawable/ic_heart_on"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/id_item_diadanh_ten"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:text="Cố đô huế"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_item_diadanh_loai"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Hà nội - Thắng cảnh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_item_diadanh_gia"
            android:textColor="#fc0000"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:text="Miễn phí"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>