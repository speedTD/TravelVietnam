<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/custom_vien"
    android:layout_margin="@dimen/_2sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp">
        <ImageView
            android:layout_margin="@dimen/_2sdp"
            android:id="@+id/hinh_mon"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/demo" />

        <TextView
            android:id="@+id/ten_mon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Cá sao tam hà"
            android:textColor="#006605"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toTopOf="@+id/gia_mon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hinh_mon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textSize="@dimen/_10sdp"
            android:id="@+id/gia_mon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Giá 20.000 vnđ -40.000 vnđ"
            android:textColor="#ff00b7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/hinh_mon"
            app:layout_constraintTop_toBottomOf="@+id/ten_mon"
            app:layout_constraintVertical_bias="1.0" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>

</RelativeLayout>